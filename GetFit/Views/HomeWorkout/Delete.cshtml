@using GetFit.Data.Enum;
@using GetFit.ViewModels;
@model Home

<h2>Are you delete this home workout?</h2>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" placeholder="Gym Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" placeholder="Description" />
        <span asp-validation-for="Description"></span>
    </div>


    <div>
        <label asp-for="HomeCategory">Home Category</label>
        <select asp-for="HomeCategory" asp-items="@Html.GetEnumSelectList<HomeCategory>()">
            <option selected="selected">--Select--</option>
        </select>
        <span asp-validation-for="HomeCategory"></span>
    </div>

    <div>
        <h4>Address</h4>
        <div>
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" placeholder="Street" />
            <span asp-validation-for="Address.Street"></span>
        </div>
        <div>
            <label asp-for="Address.City">City</label>
            <input asp-for="Address.City" placeholder="City" />
            <span asp-validation-for="Address.City"></span>
        </div>
        <div>
            <label asp-for="Address.State">State</label>
            <input asp-for="Address.State" placeholder="State" />
            <span asp-validation-for="Address.State"></span>
        </div>
    </div>

    <div>
        <label asp-for="Image">Image</label>
        <input type="file" asp-for="Image" placeholder="Update Image" />
        <span asp-validation-for="Image"></span>
    </div>
</form>
<div>
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" />
    </form>
</div>