@using GetFit.ViewModels;
@model List<UserVM>

<h1>Users</h1>

<div>
    @foreach (var user in Model)
    {
        <div>
            <img src="@user.ProfileImageUrl" width="50" height="50" />
            <h4>@user.UserName</h4>
            <p>Weight @user.Weight</p>
            <p>Height @user.Height</p>
            <div>
                <div>
                    <a asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">View</a>
                </div>
                @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    <div>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </div>
                    <div>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </div>
                }
            </div>
        </div>
    }
</div>