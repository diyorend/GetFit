@using GetFit.ViewModels;
@model RegisterVM


@{
    ViewData["Title"] = "Sign Up";
}

<div>
    @if (TempData["Error"] != null)
    {
        <div>Sorry! - @TempData["Error"]</div>
    }
</div>
<div>
<form asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="form-label" asp-for="EmailAddress"></label>
        <input class="form-control" asp-for="EmailAddress" />
        <span asp-validation-for="EmailAddress"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="ConfirmPassword"></label>
        <input class="form-control" asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-group my-3">
        <button class="btn btn-primary" type="submit">Sign Up</button>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
    </div>
</form>
</div>