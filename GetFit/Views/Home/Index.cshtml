@using GetFit.ViewModels;
@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<h1>GetFit</h1>

<div>
    @if(Model.Gyms == null)
    {
        <h4>No Gyms in your area 
            <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
            and create one. </h4>
    }
    else
    {
        <h3>Gyms near @Model.City, @Model.State</h3>
        @foreach (var item in Model.Gyms)
        {
            <div>
                <img src="@item.Image" width="100" height="100"/>
                <h5>
                    @item.Title
                </h5>
                <p>@item.Description</p>
                <a asp-area="" asp-controller="Gym" asp-action="Detail" asp-route-id="@item.Id">View</a>
            </div>
            
        }
    }
</div>